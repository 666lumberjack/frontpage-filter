{
    "manifest_version": 2,
    "name": "Frontpage Filter",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": [
                "*://www.reddit.com/*",
                "*://old.reddit.com/*"
            ],
            "js": ["content.js"]
        }
    ],
    "permissions": [
        "https://*/",
        "storage"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    }
}